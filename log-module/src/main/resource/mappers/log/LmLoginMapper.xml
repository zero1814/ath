<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="org.module.mapper.log.user.LmLoginMapper">
	<resultMap id="BaseResultMap" type="org.module.model.log.user.LmLogin">
		<id column="id" property="id" jdbcType="INTEGER" />
		<result column="uid" property="uid" jdbcType="VARCHAR" />
		<result column="user_code" property="userCode" jdbcType="VARCHAR" />
		<result column="ip" property="ip" jdbcType="VARCHAR" />
		<result column="login_time" property="loginTime" jdbcType="VARCHAR" />
	</resultMap>
	<sql id="Base_Column_List">
		id, uid, user_code, ip,
		DATE_FORMAT(login_time,'%Y-%m-%d
		%H:%i:%s')
		as
		login_time
	</sql>
	<select id="selectByUserCode" resultMap="BaseResultMap"
		parameterType="java.lang.String">
		select
		<include refid="Base_Column_List" />
		from logmodule.lm_login
		where user_code = #{userCode,jdbcType=VARCHAR}
	</select>
	<insert id="insertSelective" parameterType="org.module.model.log.user.LmLogin">
		insert into logmodule.lm_login
		<trim prefix="(" suffix=")" suffixOverrides=",">
			uid,
			user_code,
			ip,
			login_time,
		</trim>
		<trim prefix="values (" suffix=")" suffixOverrides=",">
			#{uid,jdbcType=VARCHAR},
			#{userCode,jdbcType=VARCHAR},
			#{ip,jdbcType=VARCHAR},
			STR_TO_DATE(#{loginTime,jdbcType=VARCHAR},'%Y-%m-%d
			%H:%i:%s'),
		</trim>
	</insert>
</mapper>