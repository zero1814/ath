<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="org.module.mapper.logger.order.LmOrderStatusMapper">
	<resultMap id="BaseResultMap" type="org.module.model.logger.order.LmOrderStatus">
		<id column="id" property="id" jdbcType="INTEGER" />
		<result column="uid" property="uid" jdbcType="VARCHAR" />
		<result column="order_code" property="orderCode" jdbcType="VARCHAR" />
		<result column="current_status" property="currentStatus"
			jdbcType="VARCHAR" />
		<result column="next_status" property="nextStatus" jdbcType="VARCHAR" />
		<result column="create_user" property="createUser" jdbcType="VARCHAR" />
		<result column="create_time" property="createTime" jdbcType="VARCHAR" />
		<result column="order_json" property="orderJson" jdbcType="LONGVARCHAR" />
	</resultMap>
	<sql id="Base_Column_List">
		id, uid, order_code, current_status, next_status,
		order_json,create_user,
		DATE_FORMAT(create_time,'%Y-%m-%d
		%H:%i:%s') as
		create_time
	</sql>
	<select id="selectByCode" resultMap="BaseResultMap"
		parameterType="java.lang.String">
		select
		<include refid="Base_Column_List" />
		from lm_order_status
		where order_code = #{orderCode,jdbcType=VARCHAR}
	</select>
	<insert id="insertSelective" parameterType="org.module.model.logger.order.LmOrderStatus">
		insert into lm_order_status
		<trim prefix="(" suffix=")" suffixOverrides=",">
			uid,
			order_code,
			current_status,
			next_status,
			create_user,
			create_time,
			order_json,
		</trim>
		<trim prefix="values (" suffix=")" suffixOverrides=",">
			#{uid,jdbcType=VARCHAR},
			#{orderCode,jdbcType=VARCHAR},
			#{currentStatus,jdbcType=VARCHAR},
			#{nextStatus,jdbcType=VARCHAR},
			#{createUser,jdbcType=VARCHAR},
			STR_TO_DATE(#{createTime,jdbcType=VARCHAR},'%Y-%m-%d
			%H:%i:%s'),
			#{orderJson,jdbcType=LONGVARCHAR},
		</trim>
	</insert>
</mapper>