<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="org.module.mapper.logger.event.LmEventFlowMapper">
	<resultMap id="BaseResultMap" type="org.module.model.logger.event.LmEventFlow">
		<id column="id" property="id" jdbcType="INTEGER" />
		<result column="uid" property="uid" jdbcType="VARCHAR" />
		<result column="event_code" property="eventCode" jdbcType="VARCHAR" />
		<result column="flow_status" property="flowStatus" jdbcType="VARCHAR" />
		<result column="create_user" property="createUser" jdbcType="VARCHAR" />
		<result column="create_time" property="createTime" jdbcType="VARCHAR" />
		<result column="event_json" property="eventJson" jdbcType="LONGVARCHAR" />
	</resultMap>
	<sql id="Base_Column_List">
		id, uid, event_code, event_json,flow_status, create_user,
		DATE_FORMAT(create_time,'%Y-%m-%d
		%H:%i:%s') as create_time
	</sql>
	<select id="selectByEventCode" resultMap="BaseResultMap"
		parameterType="java.lang.String">
		select
		<include refid="Base_Column_List" />
		from loggermodule.lm_event_flow
		where event_code = #{eventCode,jdbcType=VARCHAR}
	</select>
	<insert id="insertSelective" parameterType="org.module.model.logger.event.LmEventFlow">
		insert into loggermodule.lm_event_flow
		<trim prefix="(" suffix=")" suffixOverrides=",">
			uid,
			event_code,
			flow_status,
			create_user,
			create_time,
			event_json,
		</trim>
		<trim prefix="values (" suffix=")" suffixOverrides=",">
			#{uid,jdbcType=VARCHAR},
			#{eventCode,jdbcType=VARCHAR},
			#{flowStatus,jdbcType=VARCHAR},
			#{createUser,jdbcType=VARCHAR},
			STR_TO_DATE(#{createTime,jdbcType=VARCHAR},'%Y-%m-%d
			%H:%i:%s'),
			#{eventJson,jdbcType=LONGVARCHAR},
		</trim>
	</insert>
</mapper>